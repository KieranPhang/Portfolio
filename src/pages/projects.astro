---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { siteConfig } from "../config";
import "../styles/global.css";

const projects = siteConfig.projects ?? [];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Projects | {siteConfig.name}</title>
    <meta
      name="description"
      content="Projects by Kieran Phang – robotics, fabrication, and design work."
    />
  </head>

  <body class="bg-background text-foreground">
    <Header />

    <main class="max-w-5xl mx-auto px-6 py-16 space-y-10">
      <header class="space-y-3">
        <p class="text-sm uppercase tracking-[0.25em]" style={`color: ${siteConfig.accentColor}`}>
          Projects
        </p>
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900">
          Things I&apos;ve built &amp; shipped
        </h1>
        <p class="text-base sm:text-lg text-gray-600 max-w-3xl">
          Hardware, software, manufacturing experiments, and other work that doesn&apos;t
          fit neatly into a resume bullet.
        </p>
      </header>

      <div class="space-y-6">
        {projects.map((project, index) => (
          <article class="rounded-2xl border border-gray-200 bg-white/80 shadow-sm p-6 sm:p-7">
            <div class="flex items-start justify-between gap-4">
              <div>
                <span
                  class="text-xs font-mono"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  {String(index + 1).padStart(2, "0")}
                </span>
                <h2 class="mt-1 text-xl sm:text-2xl font-semibold text-gray-900">
                  {project.name}
                </h2>
              </div>

              {project.link && (
                <a
                  href={project.link}
                  class="text-sm font-medium text-blue-600 hover:text-blue-700 underline-offset-2 hover:underline"
                >
                  View project →
                </a>
              )}
            </div>

            <p class="mt-3 text-sm sm:text-base text-gray-600 leading-relaxed">
              {project.description}
            </p>

            {project.skills && project.skills.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {project.skills.map((skill) => (
                  <span class="rounded-full bg-gray-900 text-white px-3 py-1 text-xs sm:text-sm font-medium">
                    {skill}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </main>

    <Footer />
  </body>
</html>
