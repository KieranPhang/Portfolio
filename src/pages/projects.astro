---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { siteConfig } from "../config";
import "../styles/global.css";

const projects = siteConfig.projects ?? [];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={siteConfig.description} />
    <title>Projects | {siteConfig.name}</title>
  </head>

  <body class="bg-[#050608] text-gray-100">
    <Header />

    <main class="pt-24 pb-16">
      <section class="max-w-6xl mx-auto px-6 space-y-12">
        <header class="space-y-3">
          <p class="text-sm uppercase tracking-[0.25em] text-blue-500">
            Projects
          </p>
          <h1 class="text-4xl sm:text-5xl font-bold text-gray-100">
            Things I&apos;ve built &amp; shipped
          </h1>
          <p class="text-base sm:text-lg text-gray-400 max-w-3xl">
            Hardware, software, manufacturing experiments, and whatever else
            didn&apos;t fit neatly into a resume bullet. Each card can expand
            into its own deep-dive page later.
          </p>
        </header>

        <div class="grid gap-6 sm:gap-8 md:grid-cols-2">
          {projects.map((project) => (
            <article class="flex flex-col overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/60 shadow-lg shadow-black/30">
              {/* Image / thumbnail placeholder */}
              <div class="h-40 bg-gradient-to-br from-blue-500/40 via-purple-500/30 to-slate-900" />

              <div class="flex flex-1 flex-col p-6 space-y-4">
                <header class="space-y-1">
                  <h2 class="text-xl font-semibold text-gray-100">
                    {project.name}
                  </h2>
                  <p class="text-sm text-slate-400 line-clamp-3">
                    {project.description}
                  </p>
                </header>

                {project.skills && project.skills.length > 0 && (
                  <div class="flex flex-wrap gap-2 pt-1">
                    {project.skills.map((skill) => (
                      <span class="rounded-full bg-slate-800 px-3 py-1 text-xs font-medium text-slate-200">
                        {skill}
                      </span>
                    ))}
                  </div>
                )}

                <div class="pt-2">
                  {project.link && (
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center rounded-full bg-blue-600 px-5 py-2 text-sm font-medium text-white hover:bg-blue-500 transition"
                    >
                      View project â†’
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
