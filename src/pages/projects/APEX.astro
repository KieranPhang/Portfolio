                <line x1="436" y1="80" x2="464" y2="80" stroke="rgba(239,68,68,0.7)" stroke-width="2" marker-end="url(#arr-red)"></line>

                <rect x="464" y="55" width="120" height="50" rx="10" fill="rgba(30,10,10,0.8)" stroke="rgba(239,68,68,0.4)" stroke-width="1.5"></rect>
                <text x="524" y="78" fill="rgba(252,165,165,0.95)" font-size="12" font-family="ui-sans-serif" text-anchor="middle">Diagnosis</text>
                <text x="524" y="96" fill="rgba(148,163,184,0.6)" font-size="10" font-family="ui-sans-serif" text-anchor="middle">tribal knowledge</text>
                <line x1="584" y1="80" x2="612" y2="80" stroke="rgba(239,68,68,0.7)" stroke-width="2" marker-end="url(#arr-red)"></line>

                <rect x="612" y="55" width="120" height="50" rx="10" fill="rgba(30,10,10,0.8)" stroke="rgba(239,68,68,0.4)" stroke-width="1.5"></rect>
                <text x="672" y="78" fill="rgba(252,165,165,0.95)" font-size="12" font-family="ui-sans-serif" text-anchor="middle">Decision</text>
                <text x="672" y="96" fill="rgba(148,163,184,0.6)" font-size="10" font-family="ui-sans-serif" text-anchor="middle">hours later</text>

                <!-- 12hr callout -->
