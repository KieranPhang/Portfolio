---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { siteConfig } from "../../config";
import "../../styles/global.css";

const projectName = "Pyramid of Light";
const projectTagline = "A modular LED pyramid stage prop built in 9 days for a themed live event.";
const projectSummary =
  "Inspired by Daft Punk’s 2006 Sahara Tent pyramid visuals, I designed and built a lightweight, modular pyramid made from PVC and shop lights, using custom 3D printed connectors for fast assembly and transport.";

const hero = "/images/projects/pyramid/Pyramid_Hero.jpg";

const imgs = {
  lightBar: "/images/projects/pyramid/Pyramid_LightBar.jpg",
  toothpick: "/images/projects/pyramid/Pyramid_ToothpickModel.jpg",
  connectorSketch: "/images/projects/pyramid/Pyramid_ConnectorsPartSketch.jpg",
  connectorsLaidOut: "/images/projects/pyramid/Pyramid_ConnectorsLaidOut.jpg",
  connectorsPrinted: "/images/projects/pyramid/Pyramid_ConnectorsPrinted.jpg",
  cadLines: "/images/projects/pyramid/Pyramid_CADLines.jpg",
  initialSketch: "/images/projects/pyramid/Pyramid_InitialSketch.jpg",
  blueTape: "/images/projects/pyramid/Pyramid_BlueTapeTint.jpg",
};

const ytId = "fJFgYYfPhIs";
const ytStart = 39;
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>{projectName} | {siteConfig.name}</title>
  <meta name="description" content={projectSummary} />
</head>

<body class="bg-background text-foreground">
<Header />

<main class="pt-24 pb-16">
<section class="max-w-4xl mx-auto px-6 space-y-10">

<header class="space-y-3">
  <p class="text-sm uppercase tracking-[0.25em] text-blue-500">Project</p>
  <h1 class="text-4xl sm:text-5xl font-bold text-gray-100">{projectName}</h1>
  <p class="text-gray-400">{projectTagline}</p>
  <p class="text-gray-400">{projectSummary}</p>
</header>

{/* HERO */}
<section class="space-y-4">
  <div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
    <img src={hero} class="w-full h-auto max-h-[75vh] object-contain bg-slate-950" />
  </div>
</section>

{/* SCHEMATIC & PLAN */}
<section class="space-y-4">

<div class="grid sm:grid-cols-2 gap-4">

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.initialSketch}
  class="w-full h-80 object-cover object-center"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Initial sketch</p>
</div>
</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.cadLines}
  class="w-full h-80 object-cover object-center"
/>
<div class="p-4">
<p class="font-medium text-gray-300">CAD line layout</p>
</div>
</div>

</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.toothpick}
  class="w-full h-auto max-h-[70vh] object-contain bg-slate-950"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Scale model validation</p>
</div>
</div>

</section>

{/* CONNECTORS */}
<section class="space-y-4">

<div class="grid sm:grid-cols-2 gap-4">

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.connectorSketch}
  class="w-full h-auto max-h-[520px] object-contain bg-slate-950"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Connector part sketch</p>
</div>
</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.connectorsPrinted}
  class="w-full h-auto max-h-[520px] object-contain bg-slate-950"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Connectors printing</p>
</div>
</div>

</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">

<div class="aspect-square bg-slate-950">
<img
  src={imgs.connectorsLaidOut}
  class="w-full h-full object-contain rotate-90"
/>
</div>

<div class="p-4">
<p class="font-medium text-gray-300">Assembly staging</p>
</div>

</div>

</section>

{/* IMPLEMENTATION DETAILS */}
<section class="space-y-4">

<div class="space-y-4">

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">

<div class="aspect-square bg-slate-950">
<img
  src={imgs.lightBar}
  class="w-full h-full object-contain rotate-90"
/>
</div>

<div class="p-4">
<p class="font-medium text-gray-300">Lighting hardware</p>
</div>

</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.connectorsPrinted}
  class="w-full h-auto max-h-[70vh] object-contain bg-slate-950"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Connector production</p>
</div>
</div>

<div class="rounded-2xl border border-slate-800 bg-slate-900/60 overflow-hidden">
<img
  src={imgs.blueTape}
  class="w-full h-auto object-contain bg-slate-950"
/>
<div class="p-4">
<p class="font-medium text-gray-300">Diffusion and tint</p>
</div>
</div>

</div>

</section>

<div class="pt-4">
<a href="/projects" class="text-blue-400 underline">
← Back to all projects
</a>
</div>

</section>
</main>

<Footer />
</body>
</html>
