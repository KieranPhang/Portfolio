---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { siteConfig } from "../../config";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Project | {siteConfig.name}</title>
  </head>

  <body>
    <Header />

    <main class="p-8">
      <h1 class="text-4xl font-bold">Project Title</h1>
      <p class="mt-4 max-w-3xl">
        One to two sentence synopsis. Proof and details coming next.
      </p>

      <div class="mt-6">
        <a href="/projects" class="underline">Back to projects</a>
      </div>
    </main>

    <Footer />
  </body>
</html>
