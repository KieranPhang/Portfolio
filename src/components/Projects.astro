---
import { siteConfig } from "../config";

const projects = siteConfig.projects ?? [];
const hasProjects = projects.length > 0;

// homepage shows first 3 projects (simple + foolproof)
// if you later add more, they won't appear here unless they’re in the first 3
const featured = projects.slice(0, 3);
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        {/* Left column header (matches Experience layout) */}
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white">
            Projects
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        {/* Right column cards */}
        <div class="lg:col-span-8">
          <div class="space-y-8">
            {featured.map((project, index) => (
              <a
                href={project.link}
                class="block rounded-2xl border border-white/10 bg-[#0b0f14] p-6 sm:p-7 hover:border-white/20 transition-colors"
              >
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <div class="text-sm text-blue-500 mb-2">
                      {(index + 1).toString().padStart(2, "0")}
                    </div>

                    <h3 class="text-xl sm:text-2xl font-semibold text-white">
                      {project.name}
                    </h3>

                    <p class="mt-2 text-sm sm:text-base text-gray-300">
                      {project.description}
                    </p>
                  </div>

                  <span class="shrink-0 inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/5 text-white">
                    ↗
                  </span>
                </div>

                {project.skills?.length > 0 && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {project.skills.map((skill) => (
                      <span class="px-3 py-1 text-xs rounded-full bg-white/5 text-gray-200 border border-white/10">
                        {skill}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            ))}
          </div>

          <div class="mt-8">
            <a
              href="/projects"
              class="inline-flex items-center gap-2 px-5 py-3 rounded-xl font-semibold text-white"
              style={`background-color: ${siteConfig.accentColor}`}
            >
              See more projects →
            </a>
          </div>
        </div>
      </div>
    </section>
  )
}
