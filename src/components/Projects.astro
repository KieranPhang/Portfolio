---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
// show only first 3 on the homepage
const previewProjects = hasProjects ? siteConfig.projects.slice(0, 3) : [];
---

{hasProjects && (
  <section id="projects" class="pt-24 pb-16">
    <div class="max-w-6xl mx-auto px-6 space-y-10">
      <header class="space-y-3">
        <p class="text-sm uppercase tracking-[0.25em]" style={`color: ${siteConfig.accentColor}`}>
          Projects
        </p>
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-100">
          Things I&apos;ve built &amp; shipped
        </h2>
        <p class="text-base sm:text-lg text-gray-400 max-w-3xl">
          A quick look at a few highlight projects. See the full list on the projects page.
        </p>
      </header>

      {/* only first 3 projects on the homepage */}
      <div class="grid gap-6 sm:gap-8 md:grid-cols-2">
        {previewProjects.map((project) => (
          <article class="flex flex-col overflow-hidden rounded-2xl border border-slate-800 bg-slate-900/60 shadow-lg shadow-black/30">
            {/* Image / thumbnail placeholder */}
            <div class="h-32 sm:h-36 bg-gradient-to-br from-blue-500/40 via-purple-500/30 to-slate-900" />

            <div class="flex flex-1 flex-col p-6 space-y-4">
              <header class="space-y-1">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-100">
                  {project.name}
                </h3>
                <p class="text-sm text-slate-400 line-clamp-3">
                  {project.description}
                </p>
              </header>

              {project.skills && project.skills.length > 0 && (
                <div class="flex flex-wrap gap-2 pt-1">
                  {project.skills.map((skill) => (
                    <span class="rounded-full bg-slate-800 px-3 py-1 text-xs font-medium text-slate-200">
                      {skill}
                    </span>
                  ))}
                </div>
              )}

              <div class="pt-2">
                {project.link && (
                  <a
                    href={project.link}
                    class="inline-flex items-center rounded-full bg-blue-600 px-4 py-1.5 text-xs sm:text-sm font-medium text-white hover:bg-blue-500 transition"
                  >
                    View project →
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>

      {/* See more button */}
      <div class="pt-2">
        <a
          href="/projects"
          class="inline-flex items-center rounded-full border border-slate-700 px-5 py-2 text-sm font-medium text-gray-100 hover:bg-gray-100 hover:text-gray-900 transition"
        >
          See more projects
          <span class="ml-2">→</span>
        </a>
      </div>
    </div>
  </section>
)}
