---
import { siteConfig } from "../config";

type Project = {
  name: string;
  description: string;
  link: string;
  tech?: string[];
};

const projects = (siteConfig.projects ?? []) as Project[];
---

<section id="projects" class="py-24">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-4xl font-bold mb-2 text-white">Projects</h2>
    <div class="w-16 h-1 bg-blue-600 rounded-full mb-8"></div>

    <div class="space-y-6">
      {projects.map((project, index) => (
        <a
          href={project.link}
          class="block bg-[#0f1318] border border-[#1c2330] rounded-2xl p-6 hover:border-blue-600 transition"
        >
          <div class="text-blue-500 text-sm mb-2">
            {(index + 1).toString().padStart(2, "0")}
          </div>

          <h3 class="text-2xl font-semibold mb-2 text-white">
            {project.name}
          </h3>

          <p class="text-gray-400 mb-4">
            {project.description}
          </p>

          {project.tech && (
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tag) => (
                <span class="px-3 py-1 text-sm rounded-full bg-[#101317] border border-[#1c2330] text-white">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </a>
      ))}
    </div>

    <div class="mt-10">
      <a
        href="/projects"
        class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-semibold px-6 py-3 rounded-xl transition"
      >
        See more projects â†’
      </a>
    </div>
  </div>
</section>
